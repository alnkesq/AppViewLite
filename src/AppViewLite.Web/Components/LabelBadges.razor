@code {
    [Parameter] public IReadOnlyList<BlueskyModerationBase>? Labels { get; set; }
    [Parameter] public string? ExtraClass { get; set; }
}

@if(Labels != null && Labels.Count != 0)
{
    <div class="label-badge-list @ExtraClass">
        @foreach (var labelGroup in Labels.GroupBy(x => x.NicknameOrDisplayName).OrderBy(x => x.Key))
        {
            if (labelGroup.Count() == 1)
            {
                var label = labelGroup.First();
                <a class="label-badge" href="@label.BaseUrl" title="@((label.Description ?? "No description available") + (label.ModeratorDisplayName != null ? "\n\n" + label.ModeratorDisplayName : null))">
                    @labelGroup.Key
                </a>
            }
            else
            {
                <a class="label-badge" href="@labelGroup.First().BaseUrl" title="@("According to:" + string.Join(null, labelGroup.Select(x => "\n• " + x.ModeratorDisplayName).Distinct().Order()))">
                    @(labelGroup.Key + " (×" + labelGroup.Count() + ")")
                </a>
            }
        }
    </div>

}
